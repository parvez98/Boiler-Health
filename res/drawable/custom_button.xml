<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ef9739" />
            <gradient android:angle="-90" android:startColor="#ef3939" android:endColor="#ef9739"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ef9739" />
            <solid android:color="#ef9739"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ef9739" />
            <gradient android:angle="-90" android:startColor="#edeae8" android:endColor="#fff" />
        </shape>
    </item>
</selector>